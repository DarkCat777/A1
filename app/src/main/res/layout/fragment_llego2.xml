<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color3"
    tools:context=".Llego2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:textColor="@color/color4"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="¿Legó su \npedido?"/>

    <Button
        android:id="@+id/si_llega"
        android:layout_width="314dp"
        android:layout_height="65dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="30sp"
        android:text="Si "
        android:textColorHighlight="@color/color3"
        android:textColorHint="@color/color3"
        android:textSize="40dp"
        tools:background="@color/color1"
        tools:textColor="@color/color3" />
    <Button
        android:id="@+id/no_llega"
        android:layout_width="314dp"
        android:layout_height="65dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="30sp"
        android:text="No "
        android:textColorHighlight="@color/color3"
        android:textColorHint="@color/color3"
        android:textSize="40dp"
        tools:background="@color/color1"
        tools:textColor="@color/color3" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:src="@drawable/pollito" />

</LinearLayout>